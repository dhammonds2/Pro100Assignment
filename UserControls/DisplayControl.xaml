<UserControl x:Class="ProjectAstroClass.UserControls.DisplayControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAstroClass.UserControls"
        mc:Ignorable="d"
        d:DesignWidth="220" d:DesignHeight="120
             " Margin="5,5">
    <DockPanel x:Name="Casing" Height="{Binding DispHeight}" Width="210" Background="Beige" Margin="5,0,5,5">
        <TextBlock x:Name="titleDisp" Width="200" Margin="5" DockPanel.Dock="Top" Text="{Binding Title}" Background="LightGray" Foreground="Black"/>
        <Button DockPanel.Dock="Bottom" Width="50" Height="20" Content="Remove" Click="Button_Click"></Button>
        <TextBlock x:Name="descDisp" Width="200" Margin="5" DockPanel.Dock="Bottom" Text="{Binding Description}" Background="LightGray" Foreground="DarkSlateGray"/>
    </DockPanel>
</UserControl>
