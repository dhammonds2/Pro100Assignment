<UserControl x:Class="ProjectAstroClass.UserControls.DisplayControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAstroClass.UserControls"
        mc:Ignorable="d"
        d:DesignWidth="120" d:DesignHeight="50" Margin="5,5">
    <DockPanel x:Name="Casing" Height="{Binding DispHeight}" Width="120" Background="Beige">
        <Label x:Name="titleDisp" Width="110" Margin="5" DockPanel.Dock="Top" Content="{Binding Title}" Background="AliceBlue" BorderBrush="Black" BorderThickness=".25" Foreground="Black"/>
        <TextBlock x:Name="descDisp" Width="110" Margin="5" DockPanel.Dock="Bottom" Text="{Binding Description}" Background="AliceBlue" Foreground="DarkSlateGray"/>
    </DockPanel>
</UserControl>
