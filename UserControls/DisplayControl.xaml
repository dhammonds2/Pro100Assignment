<UserControl x:Class="ProjectAstroClass.UserControls.DisplayControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAstroClass.UserControls"
        mc:Ignorable="d"
        d:DesignWidth="225" d:DesignHeight="50" Margin="5,5">
    <DockPanel x:Name="Casing" Height="{Binding DispHeight}" Width="215" Background="Beige" Margin="5,0,5,-47">
        <TextBlock x:Name="titleDisp" Width="205" Margin="5" DockPanel.Dock="Top" Text="{Binding Title}" Background="AliceBlue" Foreground="Black"/>
        <TextBlock x:Name="descDisp" Width="205" Margin="5" DockPanel.Dock="Bottom" Text="{Binding Description}" Background="AliceBlue" Foreground="DarkSlateGray"/>
    </DockPanel>
</UserControl>
