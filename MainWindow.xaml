<Window x:Class="ProjectAstroClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAstroClass"
        mc:Ignorable="d"
        Title="Project /\stro Drone Builder" Height="450" Width="800"
        x:Name="Main_Window"
        Background="Beige"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- * = size proportional to grid
            auto = -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Button x:Name="viewBuild" HorizontalAlignment="Left" Width="63" Height="19" 
                Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.588">Save</Button>
        <ComboBox x:Name="cboDroneMenu" Height="30" Grid.Row="0" Grid.Column="1" 
                  SelectionChanged="cboDroneMenu_SelectionChanged" Margin="10,57,10,347">
            <ComboBoxItem Content="Armors" />
            <ComboBoxItem Content="Chassis" />
            <ComboBoxItem Content="Modules" />
        </ComboBox>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,87,10,10"/>
        <TextBox Name="NameBox" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="Drone Name" VerticalAlignment="Top" Width="247" Height="48" FontFamily="Arial Black" FontSize="24"/>

    </Grid>
</Window>
